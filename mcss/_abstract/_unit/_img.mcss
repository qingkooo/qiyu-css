/* 图片 */
@abstract u-img{
    $this = '.u-img';
	&#{$this}--horizontal{
		display: block;
		max-width: 100%;
		height:auto;
	}
	&#{$this}--vertical{
		display: block;
		max-height: 100%;
		width:auto;
	}
	&#{$this}--responsive{
		display: block;
		width:auto;
		height:auto;
		max-width: 100%;
		max-height: 100%;
	}
	&#{$this}--fill{
		display: block;
		width:100%;
		height:100%;
	}
}